{
  "$schema": "node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "**/.git/*",
      "**/.github/*",
      "**/.history/*",
      "**/.vscode/*",
      "**/node_modules/*"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error"
      },
      "correctness": {
        "all": true
      },
      "a11y": {
        "noAutofocus": "off",
        "noSvgWithoutTitle": "off",
        "noNoninteractiveTabindex": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "preserve",
      "bracketSpacing": true,
      "indentWidth": 2,
      "indentStyle": "space",
      "lineWidth": 80,
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  }
}
